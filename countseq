#! /usr/bin/env bash

usage() {
cat <<EOF

[Usage] countseq <seq.file1> <seq.file2> ... etc. or <*.fasta> <*.fastq>

[Example] countseq *.fq *.fasta.gz
[Example] countseq frog_001.fa scorpion_001.fastq.gz > animals.counts

EOF
}

if [[ -z "$1" ]]; then
        echo -e "\n  This script will count the number of total base pairs and contigs \n in gzipped or unzipped sequence (fasta fa or fastq fq) files. Uses SAMtools for bam files, where first number output is total reads, second number is all mapped reads"
        usage
        exit
fi

filearg=${@};
echo -e "\t filename \t #contigs \t #bp"
for i in ${filearg[@]}
do
case "$i" in
	*fa.gz | *fa.tgz | *fasta.gz | *fasta.tgz ) 
			contigcount=$(zgrep -c ">" $i) &
			bpcount=$(zgrep -v ">" $i | wc | awk '{print $3-$1}')
					;;
	*.fa | *.fasta | *.txt) 						
			contigcount=$(grep -c ">" $i) &
			bpcount=$(grep -v ">" $i | wc | awk '{print $3-$1}')
					;;
	*fq.gz | *fq.tgz | *fastq.gz | *.fastq.tgz )
			contigcount=$(($(zcat $i | wc -l | cut -d " " -f 1)/4)) &
			bpcount=$(zcat $i | paste - - - - | cut -f 2 | tr -d '\n' | wc -c )		
					;;
	*.fq | *.fastq)
			contigcount=$(($(cat $i | wc -l $i | cut -d " " -f 1)/4)) &
			bpcount=$(cat $i | paste - - - - | cut -f 2 | tr -d '\n' | wc -c )
					;;
	*.bam)
			contigcount=$(samtools view -c $i) &
			bpcount=$(samtools view -c -F 260 $i)
		;;
	*)
		echo 'Error - files must either end in ".fasta" ".fa" ".txt" ".fq" ".fastq" or their gzipped counterparts (.bam files also work).'
        usage
        exit 0
					;;
esac
	echo -e "\t $i \t $contigcount \t $bpcount"
	wait
done
exit 1
